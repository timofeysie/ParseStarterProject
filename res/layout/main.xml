<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/friends_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/friends_logo"
            android:padding="10dp"
            android:src="@drawable/ic_launcher" android:contentDescription="@string/friends"/>
        
        <TextView
            android:id="@+id/status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/friends_logo"
            android:padding="10dp"
            android:text="@string/status_text" />
        
        <EditText
            android:id="@+id/status_edit_text"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_toRightOf="@+id/status_text_view"
            android:padding="10dp" >
            <requestFocus />
        </EditText>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/sync_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/contacts_image_button"
            android:contentDescription="@string/sync_contacts"
            android:padding="10dp"
            android:onClick="execute"
            android:src="@drawable/sync" />

        <ImageButton
            android:id="@+id/templates_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/contacts_image_button"
            android:contentDescription="@string/templates"
            android:padding="10dp"
            android:onClick="execute"
            android:src="@drawable/templates" />

        <TextView
            android:id="@+id/phone_contacts_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/new_sms_label"
            android:layout_marginTop="23dp"
            android:padding="10dp"
            android:text="@string/phone_contacts" />

        <TextView
            android:id="@+id/phone_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/sync_image_button"
            android:layout_below="@+id/phone_contacts_label"
            android:layout_marginRight="18dp"
            android:padding="10dp"
            android:text="@string/_0" />

        <TextView
            android:id="@+id/app_contacts_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/phone_contacts"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="@string/app_contacts" />

        <TextView
            android:id="@+id/app_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/phone_contacts"
            android:layout_alignBottom="@+id/phone_contacts"
            android:layout_alignLeft="@+id/templates_label"
            android:layout_marginLeft="28dp"
            android:padding="10dp"
            android:text="@string/_0" />

        <TextView
            android:id="@+id/templates_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/templates_image_button"
            android:padding="10dp"
            android:text="@string/templates" />

        <ImageButton
            android:id="@+id/new_sms_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="26dp"
            android:contentDescription="@string/send_new_sms_message"
            android:padding="10dp"
            android:onClick="execute"
            android:src="@drawable/send_sms" />

        <TextView
            android:id="@+id/new_sms_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/new_sms_image_button"
            android:padding="10dp"
            android:text="@string/new_sms" />

        <TextView
            android:id="@+id/groups_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/phone_contacts_label"
            android:layout_alignLeft="@+id/templates_image_button"
            android:padding="10dp"
            android:text="@string/groups" />

        <ImageButton
            android:id="@+id/contacts_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/templates_spinner_label"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/_contacts"
            android:padding="10dp"
            android:onClick="execute"
            android:src="@drawable/contacts" />

        <ImageButton
            android:id="@+id/groups_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/groups_button_label"
            android:layout_alignRight="@+id/groups_button_label"
            android:contentDescription="@string/groups"
            android:padding="10dp"
            android:onClick="execute"
            android:src="@drawable/group" />

        <TextView
            android:id="@+id/sync_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/templates_spinner_label"
            android:layout_alignBottom="@+id/templates_spinner_label"
            android:layout_alignRight="@+id/sync_image_button"
            android:padding="10dp"
            android:text="@string/sync_with_contacts" />

        <TextView
            android:id="@+id/templates_spinner_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="57dp"
            android:contentDescription="@string/_contacts"
            android:padding="10dp"
            android:text="@string/_contacts" />

        <Button
            android:id="@+id/status_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contacts_image_button"
            android:layout_alignTop="@+id/groups_image_button"
            android:onClick="execute"
            android:padding="10dp"
            android:text="@string/status_button_text" />

    </RelativeLayout>

</LinearLayout>